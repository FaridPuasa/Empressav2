<div class="container">
    <div class="row">
        <div class="col-12">
            <% if(message.success){ %>
                <div class="alert alert-success text-center" role="alert">
                    <%= message.success %>
                </div>
            <% } %>
            <% if(message.error){ %>
                <div class="alert alert-danger text-center" role="alert">
                    <%= message.error %>
                </div>
            <% } %>
        </div>
    </div>
</div>