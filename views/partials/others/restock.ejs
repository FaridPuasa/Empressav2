<div class="container-fluid">
   
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-center"></h6>
        </div>

        <div class="card-body">
            <!-- Outer Row -->
            <div class="row justify-content-center">
                <div class="col-xl-10 col-lg-12 col-md-9">
                    <form class="user" method="POST" action="/itemInSuccess">
                        <div class="table-responsive-xl">
                            <table class="table">
                                <thead class="thead-light text-center">
                                    <tr>
                                        <th scope="col" colspan="4"><h3>Go Rush Express Restock Order</h3></th>
                                        <th scope="col" colspan="2">
                                            <div class="text-center">
                                                <img src="./public/img/gr_logo.png" class="rounded" alt="go_rush.png">
                                            </div>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th>Date:</th>
                                        <th><input type="date" class="form-control" name="formMETHOD" id="formMETHOD" aria-describedby="contactHelp" value=""></th>
                                        <th>Location:</th>
                                        <th><input type="text" class="form-control" name="formMETHOD" id="formMETHOD" aria-describedby="contactHelp" value=""></th>
                                        <th>
                                            <span>
                                                GR/BMF/RO:&nbsp;&nbsp;&nbsp;<%= sequence %>
                                            </span>
                                        </th>
                                        <th><input type="hidden" class="form-control" name="sequence" id="sequence" aria-describedby="contactHelp" value="<%= sequence %>"></th>
                                    </tr>
                                    <tr>
                                        <th>Made by:</th>
                                        <th>
                                            <select class="form-control" name='madeby' id="area">
                                                <option class="active">Marin</option>
                                                <option>Fathin</option>
                                            </select>
                                        </th>
                                        <th>Agent Name:</th>
                                        <th><input type="text" class="form-control" name="formMETHOD" id="formMETHOD" aria-describedby="contactHelp" value=""></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                    <tr>
                                        <th>NO.</th>
                                        <th>Product Brand</th>
                                        <th>Product Name</th>
                                        <th>Product Type</th>
                                        <th>Restock Quantity</th>
                                        <th>Quantity Before Restocking</th>  
                                    </tr>
                                </thead>
                                <tbody id="newRow">
                                    <tr class = "appendRow">
                                        <td>1.<input type="hidden" class="form-control" name="numbering" id="productBrand" aria-describedby="contactHelp" value="1."></td>
                                        <td>
                                            <div class="form-group" id="brand">
                                                <select class="form-control" name="productBrand" id="productBrand">
                                                    <option class="active">Product Br√°nd</option>
                                                    <option value="Natural Bar">Natural Bar</option>
                                                    <option value="Neat">Neat</option>
                                                    <option value="M2victoria">M2victoria</option>
                                                    <option value="Volco Venture">Volco Venture</option>
                                                    <option value="others">Others</option>
                                                </select>
                                            </div>
                                        </td>
                                        <td><input type="text" class="form-control" name="productName" id="productName" aria-describedby="contactHelp" placeholder="Product Name" value=""></td>
                                        <td>
                                            <div class="form-group" id="category">
                                                <select class="form-control" name="productCategory" id="productCategory">
                                                    <option class="active">Product Type</option>
                                                    <option value="food">Food & Beverages</option>
                                                    <option value="perfume">Perfume</option>
                                                    <option value="kids">Kids Clothing</option>
                                                    <option value="male">Male Clothing</option>
                                                    <option value="female">Female Clothing</option>
                                                    <option value="shoe">Shoes</option>
                                                    <option value="stationary">Stationary</option>
                                                    <option value="sports">Sports Equipments</option>
                                                    <option value="apparel">Apparel</option>
                                                    <option value="home">Home & Living</option>
                                                    <option value="cosmetics">Beauty & Cosmetics</option>
                                                    <option value="others">Others</option>
                                                </select>
                                            </div>
                                        </td>
                                        <td><input type="text" class="form-control" name="restockQuantity" id="restockQuantity" aria-describedby="restockQuantityHelp" placeholder="Restock Quantity" value=""></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="d-flex justify-content-center">
                                <a class="btn btn-primary m-3" onclick="addTextInput()">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                                    </svg>
                                </a>
                                <a class="btn btn-danger m-3" onclick="removeRow()">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash" viewBox="0 0 16 16">
                                        <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
                                    </svg>
                                </a>
                            </div>

                            <table class="table">
                                <thead class="thead-light text-center">
                                    <tr>
                                        <th colspan="2">Official Use Only</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Shop Supervisor:</td>
                                        <td>Go Rush:</td>
                                    </tr>
                                    <tr>
                                        <td>Shop Name:</td>
                                        <td>Status:</td>
                                    </tr>
                                    <tr>
                                        <td>Date:</td>
                                        <td>Date:</td>
                                    </tr>
                                </tbody>
                            </table>
                            <input type="hidden" class="form-control form-control-user" name="method" id="method" aria-describedby="contactHelp" value="pod_JPMC">

                            <div class="d-flex justify-content-center">
                                <button class="btn btn-primary">submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>