<div class="container-fluid">
   
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-center"></h6>
        </div>

        <div class="card-body">
            <!-- Outer Row -->
            <div class="row justify-content-center">
                <div class="col-xl-10 col-lg-12 col-md-9">
                    <form class="user" method="POST" action="/success-ro">
                        <div class="table-responsive-xl">
                            <table class="table">
                                <thead class="thead-light text-center">
                                    <tr>
                                        <th scope="col" colspan="6"><h3>Go Rush Express Pickup Order</h3></th>
                                        <th scope="col" colspan="2">
                                            <div class="text-center">
                                                <img src="./public/img/gr_logo.png" class="rounded" alt="go_rush.png">
                                            </div>
                                        </th>
                                    </tr>
                                    <tr>
                                        <th colspan="2">Date:</th>
                                        <th><input type="date" class="form-control" name="pickupDate" id="pickupDate" aria-describedby="contactHelp" value=""></th>
                                        <th>Location:</th>
                                        <th><input type="text" class="form-control" name="location" id="location" aria-describedby="contactHelp" value=""></th>
                                        <th>
                                            <span>
                                                GR/LOC/PO:&nbsp;&nbsp;&nbsp;<%= sequence %>
                                            </span>
                                        </th>
                                        <th><input type="hidden" class="form-control" name="sequence" id="sequence" aria-describedby="contactHelp" value="<%= sequence %>"></th>
                                        <th></th>
                                    </tr>
                                    <tr>
                                        <th colspan="2">Made by:</th>
                                        <th>
                                            <select class="form-control" name='madeby' id="area">
                                                <option class="active">Marin</option>
                                                <option>Fathin</option>
                                            </select>
                                        </th>
                                        <th>Agent Name:</th>
                                        <th><input type="text" class="form-control" name="formMETHOD" id="formMETHOD" aria-describedby="contactHelp" value=""></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                    <tr>
                                        <th>NO.</th>
                                        <th>Services</th>
                                        <th>Customer Name</th>
                                        <th>Customer Address</th>
                                        <th>Customer Contact</th>
                                        <th>Quantity</th>
                                        <th>Item Value</th>
                                        <th>Payment</th>      
                                    </tr>
                                </thead>
                                <tbody id="newRow">
                                    <tr class = "appendRow">
                                        <td>1.<input type="hidden" class="form-control" name="numbering" id="numbering" aria-describedby="contactHelp" value="1."></td>
                                        <td>
                                            <div class="form-group" id="brand">
                                                <select class="form-control" name="serviceType" id="serviceType">
                                                    <option class="active" value="moh">MOH</option>
                                                    <option value="jpmc">JPMC/PJSC</option>
                                                    <option value="panaga">Panaga</option>
                                                    <option value="bmf">Brunei Made Finest</option>
                                                    <option value="runner">Runner Service</option>
                                                    <option value="personal">Personal Shopping</option>
                                                    <option value="local">Local Delivery</option>
                                                    <option value="tmx">Thermomix</option>
                                                    <option value="fmx">FMX</option>
                                                </select>
                                            </div>
                                        </td>
                                        <td><input type="text" class="form-control" name="name" id="name" aria-describedby="contactHelp" placeholder="Customer Name"></td>
                                        <td><input type="text" class="form-control" name="address" id="address" aria-describedby="contactHelp" placeholder="Customer Address"></td>
                                        <td><input type="text" class="form-control" name="contact" id="contact" aria-describedby="contactHelp" placeholder="Customer Contact"></td>
                                        <td><input type="text" class="form-control" name="quantity" id="quantity" aria-describedby="contactHelp" placeholder="Quantity"></td>
                                        <td><input type="text" class="form-control" name="value" id="value" aria-describedby="contactHelp" placeholder="Item Value"></td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="d-flex justify-content-center">
                                <a class="btn btn-primary m-3" onclick="addTextInput()">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                                    </svg>
                                </a>
                                <a class="btn btn-danger m-3" onclick="removeRow()">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash" viewBox="0 0 16 16">
                                        <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
                                    </svg>
                                </a>
                            </div>

                            <input type="hidden" class="form-control form-control-user" name="method" id="method" aria-describedby="contactHelp" value="pickupOrder">

                            <div class="d-flex justify-content-center">
                                <button class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>