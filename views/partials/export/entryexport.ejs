<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <form class="user" method="POST" action="/itemInSuccess">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Dates</h1>
                                    </div>
                                
                                    <div class="form-group" id="startdate">
                                        <label for="startdate">Start Date</label>
                                        <input type="date" class="form-control" name="startdate" id="startdate" aria-describedby="startdateHelp" placeholder="Enter Start Date">
                                    </div>

                                    <div class="form-group" id="enddate">
                                        <label for="enddate">End Date</label>
                                        <input type="date" class="form-control" name="enddate" id="enddate" aria-describedby="enddateHelp" placeholder="Enter End Date">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6">

                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Additional Details</h1>
                                    </div>

                                    <div class="form-group" id="service">
                                        <label for="service">Services Selection</label>
                                        <select class="form-control" name="service" id="service">
                                            <option class="active" value="">All</option>
                                            <option value="moh">MOH</option>
                                            <option value="jpmc">JPMC</option>
                                            <option value="panaga">Panaga</option>
                                            <option value="local">Local Delivery</option>
                                            <option value="tmx">Thermomix</option>
                                            <option value="fmx">FMX</option>
                                            <option value="grp">GRP</option>
                                            <option value="runner">Runner Services</option>
                                            <option value="personal">Personal Shopping</option>
                                            <option value="zalora">Zalora</option>
                                        </select>
                                    </div>

                                    <div class="form-group" id="currentStatus">
                                        <label for="currentStatus">Status Selection</label>
                                        <select class="form-control" name="currentStatus" id="currentStatus">
                                            <option class="active" value="">All</option>
                                            <option value="A1">In Warehouse</option>
                                            <option value="A2">In Medicine Room</option>
                                            <option value="B">Schedule for Delivery</option>
                                            <option value="C">Delivery In Progress</option>
                                        </select>
                                    </div>

                                </div>
                            </div>
                
                        </div>

                        <!--Additional Information-->
                        <input type="hidden" class="form-control form-control-user" name="value" id="value" aria-describedby="contactHelp">
                        <input type="hidden" class="form-control form-control-user" name="zaloraTag" id="zaloraTag" aria-describedby="contactHelp">
                        <input type="hidden" class="form-control form-control-user" name="areaLoc" id="areaLoc" aria-describedby="contactHelp">
                        <input type="hidden" class="form-control form-control-user" name="contact" id="contact" aria-describedby="contactHelp">
                        <input type="hidden" class="form-control form-control-user" name="dateArriveTemp" id="dateArriveTemp" aria-describedby="contactHelp">
                        <input type="hidden" class="form-control form-control-user" name="areaCodeTemp" id="areaCodeTemp" aria-describedby="contactHelp">
                        <!-- End of Information -->

                        <input type="hidden" class="form-control form-control-user" name="formMETHOD" id="formMETHOD" aria-describedby="contactHelp" value="ZALORA">

                        <div class="row">
                            <a href="index.html" class="btn btn-primary btn-user btn-block">Submit</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>