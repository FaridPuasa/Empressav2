<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <form class="user" method="POST" action="/itemInSuccess">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="p-5">

                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Item In</h1>
                                    </div>
                                
                                    <div class="form-group" id="trackingNumberArea">
                                        <input type="text" class="form-control" name="trackingNumber" id="trackingNumber" aria-describedby="trackingNumberHelp" placeholder="Enter Tracking Number" onkeyup="checkTrackingNum(this, 'trackingNum')" maxlength="9">
                                    </div>

                                    <div class="form-group" id="areaArea">
                                        <select class="form-control" id="area">
                                            <option class="active">Area Selection</option>
                                            <option>BERAKAS 1</option>
                                            <option>BERAKAS 2</option>
                                            <option>JALAN TUTONG 1</option>
                                            <option>JALAN TUTONG 2</option>
                                            <option>JALAN TUTONG 3</option>
                                            <option>GADONG 1</option>
                                            <option>GADONG 2</option>
                                            <option>TUTONG</option>
                                            <option>BELAIT</option>
                                            <option>TEMBURONG</option>
                                        </select>
                                    </div>

                                    <div class="form-group" id="dateArea">
                                        <input type="text" class="form-control" name="dateArrive" id="dateArrive" aria-describedby="parcelNumberHelp" placeholder="Enter Date Arrive" onfocus="(this.type='date')">
                                    </div>

                                </div>
                            </div>

                            <div class="col-lg-6">

                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Parcel Details</h1>
                                    </div>

                                    <div class="form-group">
                                        <p class="text-center">Name:</p>
                                        <h5 class="text-center" id="customerName">Customer Name</h5>
                                        <input type="hidden" class="form-control form-control-user" name="name" id="name" aria-describedby="nameHelp">
                                    </div>

                                    <div class="form-group">
                                        <p class="text-center">Address:</p>
                                        <h5 class="text-center" id="customerAddress">Customer Address</h5>
                                        <input type="hidden" class="form-control form-control-user" name="address" id="address" aria-describedby="addressrHelp">
                                    </div>

                                    <div class="form-group">
                                        <p class="text-center">Contact:</p>
                                        <h5 class="text-center" id="customerContact">Customer contact</h5>
                                        <input type="hidden" class="form-control form-control-user" name="contact" id="contact" aria-describedby="contactHelp">
                                    </div>
                                </div>
                            </div>
                
                        </div>

                        <!--Additional Information-->
                        <input type="hidden" class="form-control form-control-user" name="value" id="value" aria-describedby="contactHelp">
                        <input type="hidden" class="form-control form-control-user" name="zaloraTag" id="zaloraTag" aria-describedby="contactHelp">
                        <input type="hidden" class="form-control form-control-user" name="areaLoc" id="areaLoc" aria-describedby="contactHelp">
                        <input type="hidden" class="form-control form-control-user" name="contact" id="contact" aria-describedby="contactHelp">
                        <input type="hidden" class="form-control form-control-user" name="dateArriveTemp" id="dateArriveTemp" aria-describedby="contactHelp">
                        <input type="hidden" class="form-control form-control-user" name="areaCodeTemp" id="areaCodeTemp" aria-describedby="contactHelp">
                        <!-- End of Information -->

                        <input type="hidden" class="form-control form-control-user" name="formMETHOD" id="formMETHOD" aria-describedby="contactHelp" value="ZALORA">

                        <div class="row">
                            <a href="index.html" class="btn btn-primary btn-user btn-block">Submit</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>