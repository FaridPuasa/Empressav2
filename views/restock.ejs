<script>
    $(function() {
  var alert = $('div.alert[auto-close]');
  alert.each(function() {
    var that = $(this);
    var time_period = that.attr('auto-close');
    setTimeout(function() {
      that.alert('close');
    }, time_period);
  });
});
</script>

<script>
    function addTextInput(){
        console.log('start')
        let i = 0
        let k
        for (i; i < document.getElementsByClassName('appendRow').length ; i++){
            k = i + 2
        }

        let row = document.getElementById("newRow")
        
        let tableRow = document.createElement("tr")
        tableRow.className = "appendRow"
        let tableCol_1 = document.createElement("td")
        let tableCol_2 = document.createElement("td")
        let tableCol_3 = document.createElement("td")
        let tableCol_4 = document.createElement("td")
        let tableCol_5 = document.createElement("td")
        let tableCol_6 = document.createElement("td")

        tableRow.id = "row" + k

        let numbers = document.createElement("input")
        numbers.type = "hidden"
        numbers.className = "form-control numbers"
        numbers.name = "numbering"
        numbers.value = k + "."

        let numbering = document.createElement("span")
        numbering.innerHTML = k + "."

