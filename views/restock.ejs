        productName.id = "productName" + k

        let restockQuantity = document.createElement("input")
        restockQuantity.type = "text"
        restockQuantity.className = "form-control"
        restockQuantity.name = "restockQuantity"
        restockQuantity.placeholder = "Restock Quantity"
        restockQuantity.id = "restockQuantity"  + k

        let div_1 = document.createElement("div")
        div_1.className = "form-group"

        let select_1 = document.createElement("select")
        select_1.className = "form-control"
        select_1.name = "productBrand"

        let optionListData_1 = new Option("Product Brand", "value")
        div_1.appendChild(select_1)
        select_1.appendChild(optionListData_1)
