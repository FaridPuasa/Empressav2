        select_1.appendChild(new Option('Neat','Neat'))
        select_1.appendChild(new Option('M2victoria','M2victoria'))
        select_1.appendChild(new Option('Volco Venture','Volco Venture'))

        let div_2 = document.createElement('div')
        div_2.className = "form-group"

        let select_2 = document.createElement('select')
        select_2.className = "form-control"
        select_2.name = "productType"

        let optionListData_2 = new Option('Product Type', "value")
        div_2.appendChild(select_2)
        select_2.appendChild(optionListData_2)
        select_2.appendChild(new Option("Food & Beverages","food"))
        select_2.appendChild(new Option("Perfume","perfume"))
        select_2.appendChild(new Option("Kids Clothing","kids"))
